# Email configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
IMAP_SERVER=imap.gmail.com

# Email filters
SENDER_FILTER=sender@example.com
URL_PATTERN=https://example.com

# Web automation configuration
BUTTON_SELECTOR=//button | //a[contains(text(), 'Click') or contains(text(), 'Submit') or contains(text(), 'Login') or contains(text(), 'Sign in') or contains(text(), 'Continue') or contains(text(), 'Next') or contains(text(), 'Accept') or contains(text(), 'OK')]
SELECTOR_TYPE=xpath
HEADLESS_MODE=true

# Optional configuration
BUTTON_TEXT=Click here

# Debug and logging
DEBUG_MODE=true
LOG_LEVEL=INFO

# Note: Copy this file as .env and set your real values
# IMPORTANT: Never upload your real .env file to Git 